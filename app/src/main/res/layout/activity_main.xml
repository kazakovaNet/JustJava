<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/brown_rectangle" />

    <TextView
        android:id="@+id/quantity_label_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="16dp"
        android:background="#D94E342E"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Quantity"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFCC80"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity_label_text_view"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:background="@drawable/oval_button"
            android:onClick="decrement"
            android:text="-"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/brown_rectangle"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <Button
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:background="@drawable/oval_button"
            android:onClick="increment"
            android:text="+"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/price_label_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons_layout"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="64dp"
        android:background="#D94E342E"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Price"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFCC80"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_label_text_view"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/orange_rectangle"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="10,00 руб."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="#E65100"
        android:onClick="submitOrder"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Order"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="34sp" />
</RelativeLayout>



